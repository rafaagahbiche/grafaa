@using PersonalSite.Service.ViewModel;
@model PageViewModel

<div class="del-confirm">
    <div class="del-warn">
        <picture></picture>
        <div>
            <span>Do you want to delete this page?</span>
        </div>
    </div>
    <div class="edit-del-butt">
        <div class="edit-del-ok">
            @Ajax.ActionLink("Delete",
                         "DeletePage", 
                new { pageId = Model.PageId, articleId = Model.ParentArticleId },
                new AjaxOptions
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "ajaxdeleting",
                    UpdateTargetId = "tobeupdated",
                    OnSuccess = "turnOffDeleteStyle"
                })
        </div>
        <div class="edit-del-cancel">
            <span>Cancel</span>
        </div>
    </div>
</div>
<div class="del-background"></div>
<div class="loading hide-loading" id="ajaxdeleting"><div><span>Deleting page...</span></div></div>

